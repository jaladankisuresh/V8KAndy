<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="5dp">
    <ImageView android:id="@+id/img_edit_options"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="4dp"
        android:layout_gravity="top|end"
        android:src="@drawable/edit_options"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />
        <TextView android:id="@+id/txt_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type" />
        <TextView android:id="@+id/txt_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location" />
        <TextView android:id="@+id/txt_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating" />
        <ViewStub android:id="@+id/stub_establishment_child"
            android:inflatedId="@+id/item_establishment_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <include layout="@layout/content_comments_section"
            android:id="@+id/lyt_content_comments_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.v7.widget.CardView>