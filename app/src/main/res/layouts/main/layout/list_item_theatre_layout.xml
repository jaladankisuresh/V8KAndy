<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/txt_screen_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="screensCount" />
    <TextView android:id="@+id/txt_theatre_seating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seating Capacity : No Mentioned" />
    <TextView android:id="@+id/txt_show_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No. Of Shows : No Mentioned" />
</LinearLayout>
